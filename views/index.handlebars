<h1>Not Devoured</h1>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">devoure it</button>
        </form>

       
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h1>Devoured</h1>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
    <input type="hidden" name="devoured" value="0">
  </div>

  

  <button type="submit">Add Burger</button>
</form>
